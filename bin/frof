#!/usr/bin/env python

from frof import LocalFrofExecutor, SlurmFrofExecutor
from frof.statusmonitor import (
    HTTPServerStatusMonitor,
    OneLineStatusMonitor,
    NullStatusMonitor,
)
import click
import os


@click.command()
@click.argument("frof_file")
@click.option("--max_jobs", "-p", default=None)
@click.option("--slurm", is_flag=True, default=False)
@click.option(
    "--status", type=click.Choice(["http", "oneline", "none"]), default="none"
)
def cli_main(
    frof_file: str, max_jobs: int = None, slurm: bool = False, status: str = "none"
):
    status_monitor = {
        "none": NullStatusMonitor,
        "http": HTTPServerStatusMonitor,
        "oneline": OneLineStatusMonitor,
    }[status]
    fe = (SlurmFrofExecutor if slurm else LocalFrofExecutor)(
        os.path.expanduser(frof_file), max_jobs=max_jobs, status_monitor=status_monitor
    )
    fe.execute()


if __name__ == "__main__":
    cli_main()

